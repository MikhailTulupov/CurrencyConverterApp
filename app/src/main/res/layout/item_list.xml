<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="valute"
            type="com.hfad.currencyconverterapp.data.model.Currency"
            />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5sp">

        <LinearLayout
            android:layout_marginStart="20sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/valute_name"
                tools:text="US Dollar"
                android:text="@{valute.name}"
                android:textAppearance="?android:textAppearanceListItem"/>

            <TextView
                android:id="@+id/valute_char_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="USD"
                android:text="@{valute.charCode}"
                android:textAppearance="?android:textAppearanceMedium"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="end|center">

            <TextView
                android:id="@+id/valute_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceListItem"
                android:textColor="@color/colorAccent"
                android:gravity="end"
                android:paddingEnd="30sp"
                tools:text="73"
                android:text="@{String.format(@string/format_pattern,valute.value)}"
                tools:ignore="RtlSymmetry"
                />

        </LinearLayout>

    </LinearLayout>

</layout>